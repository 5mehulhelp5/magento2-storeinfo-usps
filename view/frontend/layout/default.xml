<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="header.panel">
            <block
                name="storeinfo.usps.header"
                template="Siteation_StoreInfoUsps::luma/header/usps.phtml"
                before="top.links"
            >
                <arguments>
                    <argument name="viewModelStoreInfo"
                        xsi:type="object">Siteation\StoreInfoUsps\ViewModel\StoreInfoUsps</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="footer">
            <block
                name="storeinfo.usps.footer"
                template="Siteation_StoreInfoUsps::luma/footer/usps.phtml"
            >
                <arguments>
                    <argument name="viewModelStoreInfo"
                        xsi:type="object">Siteation\StoreInfoUsps\ViewModel\StoreInfoUsps</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
